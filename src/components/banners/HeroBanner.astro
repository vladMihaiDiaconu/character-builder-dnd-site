---
const {title, text, buttonPrompt, buttonLink, imagePath, imageAlt ,isImageLeft} = Astro.props;
---
<section class="flex px-5 lg:px-10  pt-5 items-center mx-auto">
    <div class:list={[`bg-[#F3F8CF] max-lg:flex-col py-5 flex rounded-xl max-lg:items-center`, isImageLeft ? `lg:flex-row` : `lg:flex-row-reverse`]}>
        <img 
            class="object-contain px-3 lg:w-[500px]"
            src={imagePath} 
            alt={imageAlt}
         />
        <div class="flex-col flex items-center justify-center mx-5">
            <h1 class="lg:text-lg text-sm py-10 font-serif">{title}</h1>
            <p class="font-serif text-[11px]">{text}</p>
            {
                buttonPrompt && buttonLink &&
                <a class="my-10 rounded-lg py-2 px-3 bg-[#202e20] text-white font-serif text-[10px]" href={buttonLink} aria-label={buttonLink}>{buttonPrompt}</a>
            }
        </div>
</div>
</section>