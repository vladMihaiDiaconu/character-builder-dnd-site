<section class="px-5 pt-5">
    <h2 class="text-[10px]">Roll the dice to determine your character's attributes:</h2>
    <div id="dice-container" class="flex flex-row px-5">
        <div class="dice">0</div>
        <div class="dice">0</div>
        <div class="dice">0</div>
        <div class="dice">0</div>
      </div>
      <button id="roll-button" aria-role="roll the dice" class="border-[1] rounded-xl px-3 py-1 bg-[#202E20] text-white my-5">Roll Dice</button>
      <div id="sum-display" class="py-2">Rolls: </div>
      <form id="main-attributes-form" class="flex lg:flex-row flex-col hidden">
        <div class="pl-2">
            <label>Strength</label>
            <select class="px-5 attribute-selector" id="strength"></select>
        </div>
        <div class="pl-2">
            <label>Dexterity</label>
            <select class="px-5 attribute-selector" id="dexterity"></select>
        </div>
        <div class="pl-2">
            <label>Constitution</label>
            <select class="px-5 attribute-selector" id="constitution"></select>
        </div>
        <div class="pl-2">
            <label>Intelligence</label>
            <select class="px-5 attribute-selector" id="intelligence"></select>
        </div>
        <div class="pl-2">
            <label>Wisdom</label>
            <select class="px-5 attribute-selector" id="wisdom"></select>
        </div>
        <div class="pl-2">
            <label>Charisma</label>
            <select class="px-5 attribute-selector" id="charisma"></select>
        </div>

      </form>
</section>
<script>
    const dice = document.querySelectorAll('.dice');
    const rollButton = document.getElementById('roll-button');
    const sumDisplay = document.getElementById('sum-display');
    const attributeSelects = document.querySelectorAll(".attribute-selector");
    attributeSelects.forEach(attribute => {
        const defaultOption = document.createElement("option");
        defaultOption.textContent = "Select";
        defaultOption.value = "";
        attribute.appendChild(defaultOption);
    })

    let rollHistory = [];
    let rollCount = 0;

    function rollDice() {
    if (rollCount >= 6) {
        alert("You've reached the maximum number of rolls!");
        return;
    }

    dice.forEach(die => {
        die.classList.add('rolling');
    });

    setTimeout(() => {
        let currentRolls = [];
        dice.forEach(die => {
        const rollValue = Math.ceil(Math.random() * 6);
        die.textContent = rollValue;
        currentRolls.push(rollValue);
        die.classList.remove('rolling');
        });

        currentRolls.sort((a, b) => b - a);
        
        const sumTopThree = currentRolls.slice(0, 3).reduce((acc, curr) => acc + curr, 0);
        rollHistory.push(sumTopThree);
        rollCount++;
    
        sumDisplay.textContent = `Rolls: ${rollHistory.join(', ')}`;
    
        if (rollCount >= 6) {
        rollButton.disabled = true;
        rollButton.textContent = "That's it! You now have 6 scores for your 6 attributes. Assign them however you wish!";
        document.dispatchEvent(new Event('finished-rolling'))
        }
    }, 500);
    }

    rollButton?.addEventListener('click', rollDice);
    document.addEventListener('finished-rolling', () =>
        {
            document.getElementById('main-attributes-form')?.classList.remove('hidden')
            attributeSelects.forEach((attribute) => {
                rollHistory.forEach(roll => {
                    const option = document.createElement('option');
                    option.value = roll;
                    option.textContent = roll;
                    attribute.appendChild(option)
                })
            })
        }
    ) 

</script>
<style>
    .dice {
        width: 50px;
        height: 50px;
        background-color: #fff;
        text-align: center;
        line-height: 10px;
        font-size: 10px;
        border: 2px solid #000;
        margin: 5px;
        user-select: none;
        cursor: pointer;
        display: flex;
        justify-content: center;
        align-items: center;
        animation-fill-mode: forwards;
    }
    
    @keyframes shake {
      0% { transform: translate(1px, 1px) rotate(0deg); }
      10% { transform: translate(-1px, -2px) rotate(-1deg); }
      20% { transform: translate(-3px, 0px) rotate(1deg); }
      30% { transform: translate(3px, 2px) rotate(0deg); }
      40% { transform: translate(1px, -1px) rotate(1deg); }
      50% { transform: translate(-1px, 2px) rotate(-1deg); }
      60% { transform: translate(-3px, 1px) rotate(0deg); }
      70% { transform: translate(3px, 1px) rotate(-1deg); }
      80% { transform: translate(-1px, -1px) rotate(1deg); }
      90% { transform: translate(1px, 2px) rotate(0deg); }
      100% { transform: translate(1px, -2px) rotate(-1deg); }
    }
    
    .dice.rolling {
      animation: shake 0.5s; 
    }
    
</style>