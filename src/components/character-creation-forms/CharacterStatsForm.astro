<section class="px-5 pt-5">
    <h2 class="text-[10px]">Roll the dice to determine your character's attributes:</h2>
    <div id="dice-container" class="flex flex-row px-5">
        <div class="dice">0</div>
        <div class="dice">0</div>
        <div class="dice">0</div>
        <div class="dice">0</div>
      </div>
      <button id="roll-button" class="border-[1] rounded-xl px-3 py-1 bg-[#202E20] text-white my-5">Roll Dice</button>
      <div id="sum-display" class="py-2">Rolls: </div>
</section>


<style>
.dice {
    width: 50px;
    height: 50px;
    background-color: #fff;
    text-align: center;
    line-height: 10px;
    font-size: 10px;
    border: 2px solid #000;
    margin: 5px;
    user-select: none;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
}

@keyframes roll {
  0% { transform: rotateX(0deg) rotateY(0deg); }
  100% { transform: rotateX(360deg) rotateY(360deg); }
}
</style>
<script>
    const dice = document.querySelectorAll('.dice');
    const rollButton = document.getElementById('roll-button');
    const sumDisplay = document.getElementById('sum-display');
    let rollHistory = [];
    let rollCount = 0;

    rollButton.addEventListener('click', () => {
    if (rollCount > 6) {
        alert("You've reached the maximum number of rolls!");
        return;
    }

    let currentRolls = [];
    dice.forEach(die => {
        const rollValue = Math.ceil(Math.random() * 6);
        die.textContent = rollValue;
        currentRolls.push(rollValue);
    });

    // Sort the rolls to easily pick the top 3
    currentRolls.sort((a, b) => b - a);
    
    // Sum the top 3 rolls
    const sumTopThree = currentRolls.slice(0, 3).reduce((acc, curr) => acc + curr, 0);
    rollHistory.push(sumTopThree);
    rollCount++;

    // Update the display
    sumDisplay.textContent = `Rolls: ${rollHistory.join(', ')}`;

    // Optionally, disable the roll button after 6 rolls
    if (rollCount >= 6) {
        rollButton.disabled = true;
        rollButton.textContent = "Now you have 6 scores to assign to each of your 6 attributes.";
    }
    });

</script>